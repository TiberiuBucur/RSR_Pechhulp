<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity"
    android:background="@drawable/main_bg"
    android:theme="@style/AppTheme">

    <Button
        android:id="@+id/MapButton"
        android:layout_width="304dp"
        android:layout_height="42dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/main_btn_warning"
        android:drawablePadding="-15dp"
        android:paddingLeft="15dp"
        android:text="RSR Pechhulp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971" />

    <TextView
        android:id="@+id/infoTV"
        android:layout_width="282dp"
        android:layout_height="108dp"
        android:background="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.438" />

    <Button
        android:id="@+id/CloseButton"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:text="Bevestig"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/transparent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/infoTV"
        app:layout_constraintEnd_toEndOf="@+id/infoTV"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="@+id/infoTV"
        app:layout_constraintTop_toTopOf="@+id/infoTV"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
